
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Visitors collection
    match /visitors/{visitorId} {
      // Allow anyone to create a new visitor document (check-in)
      allow create: if true;

      // Allow authenticated users to get, update, or delete a specific document
      allow get, update, delete: if request.auth != null;
      
      // Allow authenticated users to list the entire collection (for admin pages)
      allow list: if request.auth != null;
    }

    // This separate rule allows ANYONE to list visitors IF AND ONLY IF 
    // they are querying for currently checked-in users for the check-out screen.
    match /visitors/{visitorId} {
      allow list: if request.query.where[0][0] == "checkedOut" && request.query.where[0][1] == "==" && request.query.where[0][2] == false;
    }

    // Secure other collections: only authenticated users can access
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }

    match /employees/{employeeId} {
      allow read, write: if request.auth != null;
    }
    
    match /companies/{companyId} {
      allow read, write: if request.auth != null;
    }

    match /settings/{settingId} {
      allow read, write: if request.auth != null;
    }
  }
}
