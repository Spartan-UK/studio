
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    match /visitors/{visitorId} {
      allow create: if true;
      allow get: if true;
      allow update, delete: if request.auth != null;
      
      allow list: if request.auth != null || 
                    (request.query.where.size() > 0 && "checkedOut" in request.query.where[0] && request.query.where[0].checkedOut == false) ||
                    (request.query.where.size() > 0 && "inductionComplete" in request.query.where[0] && request.query.where[0].inductionComplete == true);
    }

    match /users/{userId} {
      allow read, write: if request.auth != null;
      allow list: if request.auth != null;
    }

    match /employees/{employeeId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /companies/{companyId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /settings/{settingId} {
      allow read, write: if request.auth != null;
    }
  }
}
