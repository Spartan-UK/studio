
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Visitors collection
    match /visitors/{visitorId} {
      // Allow anyone to create a new visitor document (check-in)
      allow create: if true;

      // Allow only authenticated users to get, update, or delete a specific document
      allow get, update, delete: if request.auth != null;
      
      // Allow authenticated users to list the entire collection (for admin pages)
      allow list: if request.auth != null;
    }

    // This second rule specifically handles the public check-out screen query.
    // It is separate to ensure it doesn't conflict with the authenticated user rules.
    match /visitors/{visitorId} {
        allow list: if request.auth == null &&
            request.query.get("where") != null &&
            string(request.query.where[0][0]) == "checkedOut" &&
            string(request.query.where[0][1]) == "==" &&
            request.query.where[0][2] == false;
    }

    // Secure other collections: only authenticated users can access
    match /users/{userId} {
      // Allow users to read their own profile to get their role
      allow get: if request.auth != null;
      // Allow users to query for their own profile document
      allow list: if request.auth != null && request.query.get("where") != null && string(request.query.where[0][0]) == "uid" && string(request.query.where[0][2]) == request.auth.uid;
      // Admins can write to any user document
      allow write: if request.auth != null;
    }

    match /employees/{employeeId} {
      allow read, write: if request.auth != null;
    }
    
    match /companies/{companyId} {
      allow read, write: if request.auth != null;
    }

    match /settings/{settingId} {
      allow read, write: if request.auth != null;
    }
  }
}
