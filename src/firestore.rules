
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    match /visitors/{visitorId} {
      allow create: if true;
      allow get: if true;
      allow update, delete: if request.auth != null;
      // Allow list for authenticated users OR for the specific public query on the check-out page.
      allow list: if request.auth != null || 
                    (request.query.where.size() > 0 && 
                     "checkedOut" in request.query.where[0] &&
                     request.query.where[0].checkedOut == false);
    }

    match /users/{userId} {
      allow list, read, write: if request.auth != null;
    }

    match /employees/{employeeId} {
      // Allow authenticated users to manage employees
      allow read, write: if request.auth != null;
    }
    
    match /companies/{companyId} {
      // Allow anyone to read companies (for the combobox), but only authenticated users to write.
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /settings/{settingId} {
      // Only authenticated users can access settings
      allow read, write: if request.auth != null;
    }
  }
}
