
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isInductionCheck() {
      // This function now correctly inspects the field path of the where clauses.
      return request.query.keys().hasAll(['where', 'orderBy', 'limit'])
             && request.query.where[0].field.stringEndsWith('name')
             && request.query.where[1].field.stringEndsWith('company')
             && request.query.orderBy[0].field.stringEndsWith('inductionTimestamp')
             && request.query.limit == 1;
    }

    match /visitors/{visitorId} {
      allow create: if true;
      allow get, update, delete: if request.auth != null;
      allow list: if 
        (request.query.where.size() == 1 && request.query.where[0].field.stringEndsWith('checkedOut') && request.query.where[0].value == false)
        || isInductionCheck()
        || request.auth != null;
    }

    match /users/{userId} {
      // Only authenticated admins can manage users, but any authenticated user can read the list (for now).
      allow read, list: if request.auth != null;
      allow write: if request.auth != null;
    }

    match /employees/{employeeId} {
      // Anyone can read the list of employees to select who they are visiting.
      allow get, list: if true;
      // Only authenticated admins can add/edit/delete employees.
      allow write: if request.auth != null;
    }
    
    match /companies/{companyId} {
      // Anyone can read the list of companies.
      allow get, list: if true;
      // Only authenticated users can create/edit/delete companies.
      allow write: if request.auth != null;
    }

    match /settings/{settingId} {
      // Only authenticated admins can manage settings.
      allow read, write: if request.auth != null;
    }
    
    match /debug_tests/{testId} {
        // Allow any authenticated user to perform debug tests.
        allow read, write, delete: if request.auth != null;
    }
  }
}
