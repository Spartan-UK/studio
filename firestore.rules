
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow authenticated users to read their own user record and other users' records.
    // THIS IS THE CRITICAL FIX: It allows the client to query the users collection after login.
    match /users/{userId} {
      allow read: if request.auth != null;
      // Writing should be more restrictive, but for now, allow any authenticated user.
      allow write: if request.auth != null;
    }

    // Allow anyone to read employees and companies for dropdowns in check-in forms.
    match /employees/{employeeId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can modify
    }

    match /companies/{companyId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can modify
    }
    
    // Allow anyone to create a visitor record (check-in) and read for check-out.
    match /visitors/{visitorId} {
      allow create: if true;
      allow read: if true;
      allow update, delete: if request.auth != null;
    }

    // Only authenticated users can manage settings.
    match /settings/{settingId} {
       allow read, write: if request.auth != null;
    }
  }
}
