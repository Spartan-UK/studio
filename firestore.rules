
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the query is for induction status
    function isInductionCheck() {
      return request.query.keys().hasAll(['where', 'orderBy', 'limit'])
             && request.query.where[0].name == 'name'
             && request.query.where[1].company == 'company'
             && request.query.orderBy[0].field == 'inductionTimestamp';
    }

    match /visitors/{visitorId} {
      // Allow anyone to create a new visitor/contractor record (check-in)
      allow create: if true;
      
      // Only authenticated users can get, update, or delete a specific record
      allow get, update, delete: if request.auth != null;
      
      allow list: if 
        // Allow authenticated users to list any records
        request.auth != null || 
        // Allow unauthenticated users to list currently checked-in people for the check-out page
        (request.query.where.size() == 1 && request.query.where[0].checkedOut == false) ||
        // Allow unauthenticated users to perform the specific induction status check query
        isInductionCheck();
    }

    match /users/{userId} {
      allow read, write, list: if request.auth != null;
    }

    match /employees/{employeeId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /companies/{companyId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /settings/{settingId} {
      allow read, write: if request.auth != null;
    }
  }
}
