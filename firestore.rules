
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to specifically allow the induction check query.
    // This query must have:
    // 1. Two 'where' clauses.
    // 2. The first 'where' must be on the 'name' field.
    // 3. The second 'where' must be on the 'company' field.
    // 4. An 'orderBy' clause on 'inductionTimestamp'.
    // 5. A 'limit' of 1.
    function isInductionCheck() {
      let queryKeys = request.query.keys();
      let whereClauses = request.query.where;
      let orderByClauses = request.query.orderBy;

      return queryKeys.hasAll(['where', 'orderBy', 'limit'])
             && whereClauses.size() == 2
             && whereClauses[0].field.stringEndsWith('name')
             && whereClauses[1].field.stringEndsWith('company')
             && orderByClauses.size() == 1
             && orderByClauses[0].field.stringEndsWith('inductionTimestamp')
             && orderByClauses[0].direction == 'desc'
             && request.query.limit == 1;
    }

    match /visitors/{visitorId} {
      // Allow anyone to create a new visitor/contractor record (check-in)
      allow create: if true;
      
      // Only authenticated users can get, update, or delete a specific record
      allow get, update, delete: if request.auth != null;
      
      allow list: if 
        // Allow authenticated users to list any records
        request.auth != null || 
        // Allow unauthenticated users to list currently checked-in people for the check-out page
        (request.query.where.size() == 1 && request.query.where[0].field.stringEndsWith('checkedOut') && request.query.where[0].value == false) ||
        // Allow the specific query for checking existing inductions
        isInductionCheck();
    }

    match /users/{userId} {
      allow read, write, list: if request.auth != null;
    }

    match /employees/{employeeId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /companies/{companyId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /settings/{settingId} {
      allow read, write: if request.auth != null;
    }

    match /debug_tests/{testId} {
        // Allow any authenticated user to perform debug tests.
        allow read, write, delete: if request.auth != null;
    }
  }
}
