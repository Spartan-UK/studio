
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Visitors collection
    match /visitors/{visitorId} {
      // Allow anyone to create a new visitor document (check-in)
      allow create: if true;

      // Allow only authenticated users to get, update, or delete a specific document
      allow get, update, delete: if request.auth != null;
      
      // Allow authenticated users to list the entire collection (for admin pages)
      // OR allow ANYONE to list visitors ONLY IF they are querying for the check-out screen.
      allow list: if request.auth != null || (
        request.query.get("where") != null &&
        string(request.query.where[0][0]) == "checkedOut" &&
        string(request.query.where[0][1]) == "==" &&
        request.query.where[0][2] == false
      );
    }

    // Secure other collections: only authenticated users can access
    match /users/{userId} {
      // Allow users to read their own profile document
      allow get: if request.auth != null && request.auth.uid == userId;
      
      // Allow a user to query for their own profile document based on their UID.
      // This is crucial for the login flow (AuthProvider's getUserProfile).
      allow list: if request.auth != null && request.query.get("where") != null && string(request.query.where[0][0]) == "uid" && string(request.query.where[0][2]) == request.auth.uid;
      
      // Admins can write to any user document (for user management)
      allow write: if request.auth != null; // Simplified for now, should be admin-only
    }

    match /employees/{employeeId} {
      allow read, write: if request.auth != null;
    }
    
    match /companies/{companyId} {
      allow read, write: if request.auth != null;
    }

    match /settings/{settingId} {
      allow read, write: if request.auth != null;
    }
  }
}
