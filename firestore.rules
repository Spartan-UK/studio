
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the query is a limited query, suitable for public access.
    // This is more robust than trying to match the exact query structure.
    function isLimitedQuery() {
      return request.query.keys().hasAny(['limit']);
    }

    match /visitors/{visitorId} {
      // Allow anyone to create a new visitor/contractor record (check-in)
      allow create: if true;
      
      // Only authenticated users can get, update, or delete a specific record
      allow get, update, delete: if request.auth != null;
      
      allow list: if 
        // Allow authenticated users to list any records
        request.auth != null || 
        // Allow unauthenticated users to list currently checked-in people for the check-out page
        (request.query.where.size() == 1 && request.query.where[0].field.stringEndsWith('checkedOut') && request.query.where[0].value == false) ||
        // Allow any query that has a limit, which is safe for public access and covers our induction check.
        isLimitedQuery();
    }

    match /users/{userId} {
      allow read, write, list: if request.auth != null;
    }

    match /employees/{employeeId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /companies/{companyId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /settings/{settingId} {
      allow read, write: if request.auth != null;
    }

    match /debug_tests/{testId} {
        // Allow any authenticated user to perform debug tests.
        allow read, write, delete: if request.auth != null;
    }
  }
}
