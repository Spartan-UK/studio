
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // A user can read their own user document.
    // Admins can write to any user document.
    match /users/{userId} {
      allow get: if request.auth != null && request.auth.uid == userId;
      allow list, create, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /visitors/{visitorId} {
      allow read, write: if true;
    }
    
    match /contractors/{contractorId} {
      allow read, write: if true;
    }

    match /companies/{companyId} {
      allow read, write: if true;
    }
    
    match /employees/{employeeId} {
      allow read, write: if true;
    }

    match /settings/{settingId} {
      allow read, write: if true;
    }
  }
}
