
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAdmin() {
      // Check if the user is authenticated and their role in the users document is 'admin'.
      // This now queries the collection to find the user doc by UID field.
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      return request.auth != null && userDoc.data.role == 'admin';
    }

    match /users/{userId} {
      // Admins can perform any action.
      allow read, write: if isAdmin();
      
      // An authenticated user can get or update their own specific user document.
      allow get, update: if request.auth != null && request.auth.uid == userId;

      // Allow a user to query the 'users' collection only if they are looking for their own UID.
      // This is essential for the login flow to find the user's profile document.
      // Also allow admins to list all users for the management page.
      allow list: if (request.auth != null && request.query.where.uid == request.auth.uid) || isAdmin();
    }

    match /visitors/{visitorId} {
      // Anyone can create a visitor record (for check-in).
      allow create: if true;
      // Any authenticated user can read, list, or update visitor records.
      allow read, list, update: if request.auth != null;
      // Only admins can delete visitor records.
      allow delete: if isAdmin();
    }

    match /contractors/{contractorId} {
      // Anyone can create a contractor record (for check-in).
      allow create: if true;
      // Any authenticated user can read, list, or update contractor records.
      allow read, list, update: if request.auth != null;
      // Only admins can delete contractor records.
      allow delete: if isAdmin();
    }

    match /employees/{employeeId} {
      // Any authenticated user can read employee records (for selection).
      allow get, list: if request.auth != null;
      // Only admins can write employee records.
      allow write: if isAdmin();
    }

    match /companies/{companyId} {
      // Any authenticated user can read or create company records.
      allow get, list, create: if request.auth != null;
      // Only admins can update or delete company records.
      allow update, delete: if isAdmin();
    }

    match /settings/{settingId} {
      // Only admins can read or write settings.
      allow read, write: if isAdmin();
    }
    
    match /roles_admin/{uid} {
      // This collection is deprecated and access is denied.
      allow read, write: if false;
    }
  }
}
