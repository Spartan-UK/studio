
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Visitors: Allow anyone to create (check-in), but only authenticated users to read/update/delete.
    match /visitors/{visitorId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }

    // Users: Only authenticated users can manage user records.
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }

    // Employees: Only authenticated users can manage employee records.
    match /employees/{employeeId} {
      allow read, write: if request.auth != null;
    }
    
    // Companies: Only authenticated users can manage company records.
    match /companies/{companyId} {
      allow read, write: if request.auth != null;
    }

    // Settings: Only authenticated users (admins) should manage settings.
    // More specific role-based rules can be added later.
    match /settings/{settingId} {
      allow read, write: if request.auth != null;
    }
  }
}
